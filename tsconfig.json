{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declarationDir": "./dist", // Place .d.ts files in dist
    "moduleResolution": "node",
    "sourceMap": true, // Generate source maps for easier debugging
    "isolatedModules": true // To make sure TypeScript can compile modules individually
  },
  "include": ["src/**/*"]
}
